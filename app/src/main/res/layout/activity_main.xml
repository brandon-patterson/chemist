<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.github.brandon_patterson.chemist.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="@string/hello_chemist"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="fill_parent"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:gravity="center_horizontal"
                      android:dividerPadding="2dp"
                      android:paddingHorizontal="100dp">
            <Button
                    android:id="@+id/main_unit_analysis_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:text="@string/unit_analysis"/>

            <Button
                    android:id="@+id/main_models_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:text="@string/models"/>

            <Button
                    android:id="@+id/main_balance_equations_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:text="@string/balance_equations"/>

            <Button
                    android:id="@+id/main_stoichiometry_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:text="@string/stoichiometry"/>

            <Button
                    android:id="@+id/main_references_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:text="@string/references"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
